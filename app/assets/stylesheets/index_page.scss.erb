//= depend_on_asset "home_background3.jpg"
html {
	min-width: 100%;
	position: relative;
	min-height: 100%;
	overflow-x: hidden;
	overflow-y: hidden;
}
@media (max-width: 768px) {
	html {
		overflow-y: scroll;
	}
}

$footerHeight: 20px;
body {
	padding-bottom: $footerHeight;
	// overflow-x: hidden;
	background: url('<%= asset_path("home_background3.jpg") %>') no-repeat center center fixed;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
}
nav#indexBar{
	li{
		a {			
			font-size: 24px;
			color: #FFFFFF;
			// font-weight: bold;
		}
		a:hover {
			color: #FFF;
			text-decoration: underline;
			transition: text-decoration 1s;
		}
		a:visited {
			color: #FFF;
		}		
	}
	ul.dropdown-menu {
		// padding:-30px 0 0 0;
		padding: 0;
		margin: -30px 0 0 0;
		background-color: rgba(255, 255, 255, 0.15);
		padding: 10px 0;
		border-radius: 2px;		
		li {
			a {
				color: #FFF;
				font-size: 18px;				
			}
			a:hover {
				background: #FFFFFF;
				color: #4E4E4E;
				text-decoration: none;
			}
		}
		
	}
	// div.navbar-collapse.collapse.in {
	// 	background: rgba(255, 255, 255, 0.28);
	// }
}
.navbar-brand {
	padding-top: 10px;
	img {
		height: 60px;
		width: 60px;
	}
}

div#welcome_intro {
	max-width: 100%;
	// width: 0%;
	margin: 0 auto;
	margin-top: 15%;	
	text-align: center;
	position: relative;	
	h3#welcome {
		font-size: 40px;
		display: none;	
		color: #FFF;	
		padding-left: 60px;
	}
	h1#csa {
		margin-top: -25px;
		font-weight:700;
		font-size: 72px;
		text-shadow: 2px 2px #181818;
		display: none;
		color: #FFF;
	}	
}
@media(max-width: 768px) {	
	nav#indexBar {
		.navbar-right {
			margin-top: 0;
			margin-bottom: 0;
			a {
				font-size: 20px;
			}
		}
		ul.dropdown-menu {
			margin: 0;
			li {
				a {
					color: #FFF;
					font-size: 18px;
					// font-weight: bold;
				}
			}
		}
	}
	a.navbar-brand {
		margin-top: 15px;
		img {
			height: 50px;
			width: 50px;
		}
	}
	div#welcome_intro {
		text-align: left;
		// width: 80%;
		// margin-left: 0px; 
		// padding-right: 20px;
		max-width: 90%;
		h3#welcome {
			font-size: 25px;
			width: 80%;
			padding-left: 0;
		}
		h1#csa {
			margin-top: 10px;
			font-size: 40px;
		}
	}


}

footer {
	position: absolute;
	bottom: 0;
	height: $footerHeight;			
	min-width: 100%;
	line-height: $footerHeight;
	p {
		color: #FFF;
		padding-left: 10px;
	}
}