ready = ->	
	# index page text slide in
	$("#welcome").delay(300).slideDown(500);
	$("#csa").delay(800).slideDown(500);
	
	# google calendar config
	$('#calendar').fullCalendar 
		googleCalendarApiKey: '<%= ENV["GOOGLE_CALENDAR_API_KEY"] %>'		
		events: 
			googleCalendarId: '3qeg0ij57jgh6k0crbmccl8q5s@group.calendar.google.com'	
# turbolinks treats everything like a single page -> compatible with regular page load and click links
$(document).ready ready
$(document).on 'page:load', ready
